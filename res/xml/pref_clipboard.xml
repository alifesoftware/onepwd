<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="clipboard"
    >
  <SwitchPreference
      android:defaultValue="false"
      android:key="copy_clipboard"
      android:title="@string/pref_title_copy_clipboard"
      android:summary="@string/pref_desc_copy_clipboard_no"
    />
  <ListPreference
      android:defaultValue="60"
      android:entries="@array/pref_clear_time_titles"
      android:entryValues="@array/pref_clear_time_values"
      android:key="clear_clipboard"
      android:negativeButtonText="@null"
      android:positiveButtonText="@null"
      android:title="@string/pref_title_clear_time"
      android:dependency="copy_clipboard"
    />
</PreferenceScreen>
